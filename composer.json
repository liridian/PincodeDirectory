{
    "name": "Liridian/PincodeDirectory",
    "type": "library",
    "description": "PHP wrapper for All India Pincode Directory",
    "keywords": [
        "Pincode",
        "Directory",
        "India",
        "Zipcode"
    ],
    "homepage": "https://github.com/Liridian/PincodeDirectory",
    "license": "MIT",
    "authors": [
        {
            "name": "Saahil Pingle"
        }
    ],
    "require": {
        "php" : ">=5.6",
        "guzzlehttp/guzzle": "5.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Liridian\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Liridian\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/test.php --whitelist src --coverage-html tests/report",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 scripts"
    },
    "config": {
        "sort-packages": true
    }
}